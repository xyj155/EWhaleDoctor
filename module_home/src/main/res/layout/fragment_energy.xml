<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_210"
                    android:layout_margin="@dimen/dp_1.5"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_snack_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="早餐&amp;燕麦"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textSize="18sp"
                        android:id="@+id/tv_title1"
                        android:textStyle="bold" />
                    <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/tv_title1"
                        android:layout_height="wrap_content"
                        android:text="唤醒一天的你"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1.5"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/iv_snack_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="酸爽味觉"
                            android:textColor="#000"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="18sp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/tv_title2"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textSize="13sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_title2"
                            android:layout_height="wrap_content"
                            android:text="枯燥的学习加点料"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1.5"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/iv_snack_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="外用清凉"
                            android:textColor="#000"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="18sp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/tv_title3"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_title3"
                            android:layout_height="wrap_content"
                            android:text="除了零食还有它"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>